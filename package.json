{
  "name": "realestate-comparer",
  "version": "1.0.0",
  "private": true,
  "description": "Real Estate Investment Analyzer - Compare German property investments",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm run --parallel build",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "lint": "pnpm run --parallel lint",
    "test": "pnpm run --parallel test",
    "db:migrate": "pnpm --filter backend prisma:migrate",
    "db:generate": "pnpm --filter backend prisma:generate",
    "db:studio": "pnpm --filter backend prisma:studio",
    "clean": "rm -rf node_modules apps/*/node_modules"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
